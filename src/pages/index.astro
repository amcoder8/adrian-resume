---
import Layout from '../components/Layout';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>Adrian Mustafa - Frontend Developer | Professional Resume</title>
		<meta name="description" content="Adrian Mustafa - Passionate Frontend Developer specializing in React, Astro, TypeScript, and modern web technologies. View my professional resume and portfolio." />
		<meta name="keywords" content="frontend developer, react developer, astro, typescript, javascript, web developer, portfolio, resume, adrian mustafa" />
		<meta name="author" content="Adrian Mustafa" />
		<meta name="robots" content="index, follow" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://adrian-resume.netlify.app/" />
		<meta property="og:title" content="Adrian Mustafa - Frontend Developer" />
		<meta property="og:description" content="Passionate Frontend Developer creating beautiful, functional web experiences with modern technologies." />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://adrian-resume.netlify.app/" />
		<meta property="twitter:title" content="Adrian Mustafa - Frontend Developer" />
		<meta property="twitter:description" content="Passionate Frontend Developer creating beautiful, functional web experiences with modern technologies." />
		<meta property="twitter:image" content="/og-image.jpg" />
		
		<!-- Additional SEO -->
		<meta name="theme-color" content="#E41E20" />
		<link rel="canonical" href="https://adrian-resume.netlify.app/" />
		
		<!-- Preconnect to external domains for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Schema.org structured data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Adrian Mustafa",
			"jobTitle": "Frontend Developer",
			"description": "Passionate Frontend Developer creating beautiful, functional web experiences with modern technologies.",
			"url": "https://adrian-resume.netlify.app/",
			"sameAs": [
				"https://github.com/adrian-mustafa",
				"https://linkedin.com/in/adrian-mustafa"
			],
			"knowsAbout": [
				"React",
				"Astro",
				"TypeScript",
				"JavaScript",
				"Frontend Development",
				"Web Development"
			]
		}
		</script>
	</head>
	<body>
		<Layout client:load />
	</body>
</html>
