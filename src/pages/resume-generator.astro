---
import { ThemeProvider } from '../components/ThemeProvider';
import ResumeGeneratorComponent from '../components/ResumeGenerator/ResumeGenerator';

// Import styles
import '../styles/main.scss';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- SEO Meta Tags -->
  <title>LaTeX Resume Generator - Create Professional Resumes | Adrian Mustafa</title>
  <meta name="description" content="Generate professional, ATS-optimized LaTeX resumes with our interactive form builder. Download customized templates ready for compilation." />
  <meta name="keywords" content="latex resume, resume generator, professional resume, ATS resume, resume template, cv generator, adrian mustafa" />
  <meta name="author" content="Adrian Mustafa" />
  <meta name="robots" content="index, follow" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://adrian-resume.netlify.app/resume-generator" />
  <meta property="og:title" content="LaTeX Resume Generator - Create Professional Resumes" />
  <meta property="og:description" content="Generate professional, ATS-optimized LaTeX resumes with our interactive form builder. Download customized templates ready for compilation." />
  <meta property="og:image" content="/og-resume-generator.jpg" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://adrian-resume.netlify.app/resume-generator" />
  <meta property="twitter:title" content="LaTeX Resume Generator - Create Professional Resumes" />
  <meta property="twitter:description" content="Generate professional, ATS-optimized LaTeX resumes with our interactive form builder." />
  <meta property="twitter:image" content="/og-resume-generator.jpg" />
  
  <!-- Canonical URL -->
  <link rel="canonical" href="https://adrian-resume.netlify.app/resume-generator" />
  
  <!-- Preconnect to external domains for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- Schema.org structured data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "LaTeX Resume Generator",
    "description": "Interactive tool to generate professional LaTeX resumes",
    "url": "https://adrian-resume.netlify.app/resume-generator",
    "applicationCategory": "BusinessApplication",
    "operatingSystem": "Web Browser",
    "author": {
      "@type": "Person",
      "name": "Adrian Mustafa",
      "url": "https://adrian-resume.netlify.app"
    },
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD"
    }
  }
  </script>
</head>

<body>
  <ThemeProvider client:load>
    <!-- Simple navigation for the resume generator page -->
    <nav style="
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      padding: 1rem 2rem;
      z-index: 1000;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    ">
      <div style="
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      ">
        <a href="/" style="
          font-weight: 700;
          font-size: 1.5rem;
          color: #667eea;
          text-decoration: none;
        ">Adrian Mustafa</a>
        <a href="/" style="
          background: #667eea;
          color: white;
          padding: 0.5rem 1.5rem;
          border-radius: 25px;
          text-decoration: none;
          font-weight: 600;
          transition: all 0.3s ease;
        ">‚Üê Back to Portfolio</a>
      </div>
    </nav>
    
    <main style="padding-top: 80px; min-height: 100vh;">
      <ResumeGeneratorComponent client:load />
    </main>
  </ThemeProvider>
</body>
</html>
